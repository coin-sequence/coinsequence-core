{
  "name": "ctf-core",
  "version": "1.0.0",
  "description": "V1 Core Smart contracts of CTF Tokens",
  "devDependencies": {
    "husky": "^9.0.11",
    "solhint": "^4.5.4",
    "solhint-plugin-chainlink-solidity": "npm:@chainlink/solhint-plugin-chainlink-solidity@^1.0.1",
    "solhint-plugin-prettier": "^0.1.0",
    "thirdweb": "^5.15.0"
  },
  "scripts": {
    "lint": "solhint 'src/**/*.sol' --max-warnings 0",
    "test": "bash script/shell/test.sh",
    "analyze": "slither . --foundry-compile-all",
    "gen-coverage": "forge coverage --ast --report lcov --report-file coverage/lcov.info --silent && npm run gen-coverage-html",
    "gen-coverage-html": "genhtml coverage/lcov.info -o coverage/html/ --quiet --ignore-errors inconsistent",
    "open-coverage": "open coverage/html/index.html",
    "deploy-engine": "forge script script/DeployEngine.s.sol --verify",
    "deploy": "npx thirdweb deploy",
    "postinstall": "forge install",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NAME-TO-BE-DEFINED/ctf-core.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NAME-TO-BE-DEFINED/ctf-core/issues"
  },
  "homepage": "https://github.com/NAME-TO-BE-DEFINED/ctf-core#readme"
}
